<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="inputLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.88</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_4sdp</item>
        <item name="boxStrokeColor">@color/main_purple</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="android:textColorHint">@color/txt_gr</item>
        <item name="startIconTint">@color/sec_purple</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/main_purple</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="endIconTint">@color/main_purple</item>
    </style>

    <style name="input_edit_text_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">textPersonName</item>
        <item name="maxLines">1</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintWidth_percent">0.80</item>
        <item name="layout_constraintHeight_percent">0.08</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="backgroundTint">@color/main_purple</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="cardCornerRadius">@dimen/_20sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
        <item name="layout_constraintWidth_percent">0.78</item>
    </style>

    <style name="img_person_style">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
        <item name="tint">@color/sec_purple</item>
    </style>

    <style name="tv_person_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sec_purple</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="tv_phone_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="btn_navigate_style">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_6sdp</item>
        <item name="tint">@color/pale_orange</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>


</resources>